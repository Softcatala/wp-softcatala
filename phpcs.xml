<?xml version="1.0"?>
<ruleset name="WP Softcatala">
    <description>WP Softcatala rules for PHP_CodeSniffer</description>

    <file>shortcodes/</file>

    <exclude-pattern>tests/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>

    <arg name="extensions" value="php" />
    <arg value="nsp" />

    <rule ref="Yoast">
        <exclude name="Yoast.ControlStructures.IfElseDeclaration.NewLine" />
        <exclude name="WordPress.CSRF.NonceVerification.NoNonceVerification" /><!-- TODO audit and fix nonces -->
    </rule>

    <rule ref="WordPress.WP.EnqueuedResources.NonEnqueuedScript">
        <exclude-pattern>css/xml-sitemap-xsl.php</exclude-pattern>
    </rule>

    <rule ref="Squiz.Commenting">
	<exclude name="Squiz.Commenting.FunctionComment.ScalarTypeHintMissing" />
        <exclude name="Squiz.Commenting.FunctionComment.Missing" />
        <exclude name="Squiz.Commenting.VariableComment.Missing" />
    </rule>

    <rule ref="Squiz.ControlStructures">
        <exclude name="Squiz.ControlStructures.InlineIfDeclaration.NotSingleLine" />
    </rule>
</ruleset>
