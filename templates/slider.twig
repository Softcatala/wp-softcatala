{% if slides %}
<!-- .carousel -->
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    {% for slide in slides %}
    <li data-target="#carousel-example-generic" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
    {% endfor %}
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    {% for slide in slides %}
    <div class="item {% if loop.first %}active{% endif %}">
      <a href="{{ slide.slide_link }}" title="{{ slide.title }}">
        <img src="{{ slide.thumbnail.src }}" alt="{{ slide.title }}" />
        {% if slide.title or slide.post_excerpt %}
          <div class="carousel-caption">
          {% if slide.title %}
             <h1>{{ slide.title }}</h1>
          {% endif %}
          {% if slide.post_excerpt %}
            <h2>{{ slide.post_excerpt }}</h2>
          {% endif %}
          {% if slide.button_title %}
            <button href="{{ slide.slide_link }}" class="bt-basic bt-blanc">{{ slide.button_title }}</button>
          {% endif %}
          </div>
          {% if slide.image_credits %}
            <div class="peu-foto">
              <em>{{ slide.image_credits }}</em>
            </div>
          {% endif %}
        {% endif %}
      </a>
    </div>
    {% endfor %}
  </div><!--/ Wrapper for slides -->
</div><!--/.carousel -->
{% endif %}