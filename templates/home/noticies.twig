<!-- .noticies -->
<div class="noticies col-sm-12 col-md-9">
  <h2>Notícies</h2>
  <!-- .row -->
    {% if posts %}
  <div class="row">
    {% for post in posts %}
    <div class="col-xs-6 col-sm-4">
      <div class="thumbnail thumbnail-galeria">
        <a href="{{post.link}}" title="{{post.title}}">
          {% if post.thumbnail.src %}
          <img src="{{post.thumbnail.src|resize(270, 170, 'top')}}" alt="{{post.title}}">
          {% endif %}
          <p>{{post.title}}</p>
          <time class="data-temps">{{ post.post_date|date}}</time>
        </a>
      </div>
    </div>
    {% endfor %}
  </div><!--/.row -->
  <div class="row">
    <div class="col-xs-12">
      <a href="/noticies/" title="Més notícies" class="bt-basic">Més notícies</a>
    </div>
  </div>
  {% else %}
    <div class="row"><div class="col-xs-6 col-sm-4">No hi ha cap notícia</div></div>
  {% endif %}
</div><!--/.noticies -->