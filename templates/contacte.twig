{% extends "base.twig" %}

{% block content %}
	<!-- .main .wrap-blanc -->
	<main class="main wrap-blanc cd-main-content">
		<!-- .main-header -->
		{% include "contingut-header.twig" %}
		<!--/.main-header -->

		<div class="container-fluid">
			<div class="row">

				<!-- .contingut -->
				<div class="contingut contingut-left col-sm-9">
					<!-- .contingut-header -->
					<header class="contingut-header">
						<p>{{  post.post_excerpt }}</p>

						{% if post.text_baixada_principal %}
							<a href="{{ post.baixada_principal }}" class="bt-download" type="button"><i class="fa fa-download"></i><span>{{ post.text_baixada_principal }}</span></a>
						{% endif %}

						{% if post.thumbnail.src %}
							{% if not post.text_baixada_principal %}<br/>{% endif %}
							<img alt="{{post.title}}" src="{{post.thumbnail.src}}" class="headerimg" />
						{% endif %}
					</header>
					<!--/.contingut-header -->

					<!-- section paragraf -->
					<section class="contingut-section">{{  post.content }}

                        <div class="formulari">

                          <section class="contingut-section" id="contingut-formulari-response" style="display:none">
							  <span id="message_response">Gràcies per posar-vos en contacte amb nosaltres. Us contactarem aviat.<br/><br/></span>

							  <a class="bt-basic bt-basic-vermell" style="color: #FFFFFF" href="/" title="Pàgina d'inici de Softcatalà">Continueu navegant pel web...</a>
                          </section>

                          <!-- section -->
                          <section class="contingut-section" id="contingut-formulari">
                            <form class="form-horizontal" id="report_form" method="post">
                              <!-- camp -->
                              <div class="form-group">
                                <label class="col-sm-3 control-label">El vostre nom *</label>
                                <div class="col-sm-6">
                                  <input type="text" name="nom_contacte" id="nom_contacte" class="form-control" placeholder="Nom" required>
                                </div>
                              </div><!-- camp -->

                              <!-- camp -->
                              <div class="form-group">
                                <label class="col-sm-3 control-label">El vostre correu electrònic *</label>
                                <div class="col-sm-6">
                                  <input type="email" name="correu_contacte" id="correu_contacte" class="form-control" placeholder="Correu electrònic" required>
                                </div>
                              </div><!-- camp -->

                              <!-- camp dropdown -->
                              <div class="form-group">
                                <label class="col-sm-3 control-label">Per què ens contacteu?</label>
                                <div class="col-sm-6">
                                  <select class="form-control selectpicker" name="tipus" id="tipus_contacte">
                                    <option value="general" selected>General</option>
									<option value="noticies">Notícies</option>
                                    <option value="publicitat">Publicitat</option>
                                    <option value="forums" >Fòrums</option>
                                  </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                              </div><!-- /camp dropdown -->

                              <!-- camp de text -->
                              <div class="form-group">
                                <label class="col-sm-3 control-label">Comentari *</label>
                                <div class="col-sm-9">
                                  <textarea class="form-control" name="comentari_contacte" id="comentari_contacte" rows="6" placeholder="Sigueu el més clar possible" required></textarea>
                                </div>
                              </div><!--/camp de text -->

                              <!-- botons -->
                              <div class="form-group">
                                  <div class="col-sm-3"></div>
                                  <div class="col-sm-9 form-botons">
                                    <div class="row">
                                   <div class="form-boto col-xs-5">
                                     <input type="hidden" id="nom_from" value="{% if content_title %}{{ content_title }}{% else %}Web{% endif %} de Softcatalà" />
                                     <input type="hidden" id="to_email" value="{{ contact.to_email }}" />
                                     <input type="hidden" id="assumpte" value="[{% if content_title %}{{ content_title }}{% else %}{{ post.title }}{% endif %}] Contacte des del formulari" />
                                     {{ function('wp_nonce_field', 'contact_form') }}
                                     <button type="submit" class="bt-basic bt-basic-vermell-fosc">Envia</button>
                                   </div>
                                   </div>
                                  </div>
                              </div><!--/botons -->
                            </form>
                          </section><!--/ section -->
                        </div><!--/.formulari -->
                    </section>
					<!--/ section paragraf -->

				</div><!--/.contingut -->

				{% include "sidebar.twig" %}
			</div><!--/.row -->
		</div><!--/.container-fluid -->
	</main><!--/.main .wrap-blanc -->


	<!-- .seccio-vermella -->
	{% include "call-to-action-bottom.twig" %}
	<!--/.seccio-vermella -->
{% endblock %}
