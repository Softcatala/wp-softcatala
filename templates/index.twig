{% extends "base.twig" %}

{% block content %}
  <script type="text/javascript">
    var currentLocation = window.location;
  </script>
	<p>{{qux}}</p>
	<!-- .main .wrap-blanc -->
    <main class="main blog wrap-blanc">
      <!-- .main-header -->
      <header class="main-header">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-8 col-sm-9">
              <h1>Notícies</h1>
              {% if title %}
                <span>/</span>
                <h2>{{title}}</h2>
              {% endif %}
              {% include "share_links.twig" %}
            </div>
            {% if attribute(post,'wpcf-call_to_action_top_url') %}
            <div class="col-xxs-12 col-xs-4 col-sm-3">
              <a href="{{ attribute(post,'wpcf-call_to_action_top_url') }}" class="bt-basic bt-basic-vermell">{{ attribute(post,'wpcf-call_to_action_top_text') }}</a>
            </div>
			{% endif %}
          </div>
        </div>
      </header><!--/.main-header -->

      <div class="container-fluid">
        <div class="row">
          <!-- .contingut -->
          <div class="contingut contingut-left llista-noticies col-sm-12 col-md-9">
            <!-- .contingut-header -->
            <header class="contingut-header">

              <!-- .filtres -->
              <form class="searchform" method="get" id="cerca_noticies" role="search" action="{{ search_params.current_url }}">
              <div class="filtres row">
                <div class="col-sm-10">
                  <div class="input-group">
                    <input type="text" class="form-control" value="{% if cerca %}{{cerca}}{% endif %}" placeholder="Escriviu aquí la vostra cerca" id="s" name="s" />
                    <input type="hidden" value="post" name="post_type" />
                    <input type="hidden" value="1" name="sentence" />
                    <span class="input-group-addon"><button type="submit" class="btn lupa"><i class="fa fa-search"></i></button></span>
                  </div>

                  <div class="row">
                    <div class="col-sm-10">
                      <div class="row">
                        <!-- dropdown sitemes operatius -->
                        <div class="col-sm-6">
                          <select class="form-control selectpicker" id="temes">
                            <option value="/noticies">Tots els temes</option>
                            {% for category in categories.temes %}
                              <option value="{{ category.link }}{{ search_params.current_url_params }}" {% if cat_link == category.link %}selected{% endif %}>{{ category.name }}</option>
                            {% endfor %}
                          </select>
                        </div><!--/dropdown sitemes operatius -->

                        <!-- dropdown categories -->
                        <div class="col-sm-6">
                          <select class="form-control selectpicker" id="tipus">
                            <option value="/noticies">Tots els tipus</option>
                            {% for category in categories.tipus %}
                            	<option value="{{ category.link }}{{ search_params.current_url_params }}" {% if cat_link == category.link %}selected{% endif %}>{{ category.name }}</option>
                            {% endfor %}
                          </select>
                        </div><!--/dropdown categories -->
                      </div>
                    </div>
                  </div>

                </div>
              </div><!--/.filtres -->
              </form>
            </header><!--/.contingut-header -->

            {% if posts %}
            {% for post in posts %}
      				{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
      			{% endfor %}
            <!-- .pagination -->
            <div class="row">
              <div class="intern">
                <nav class="intern-center">
                  <ul class="pagination">
                    {% if pagination.prev %}
                    <li>
                      <a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}"><span aria-hidden="true">«</span></a>
                    </li>
                    {% endif %}
                    {% for page in pagination.pages %}
                        <li>
                            {% if page.link %}
                                <a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
                            {% else %}
                                <span class="{{page.class}}">{{page.title}}</span>
                            {% endif %}
                        </li>
                    {% endfor %}
                    {% if pagination.next %}
                    <li>
                      <a href="{{pagination.next.link}}" aria-label="Next" class="next {{pagination.next.link|length ? '' : 'invisible'}}"><span aria-hidden="true">»</span></a>
                    </li>
                    {% endif %}
                  </ul>
                </nav>
              </div>
            </div>
            {% else %}
            {% if title %}
              No s'ha trobat cap resultat per a la vostra cerca: <strong>{{ title }}</strong>
            {% else %}
              No hi ha cap notícia publicada en aquest moment
            {% endif %}
            {% endif %}<!--/.pagination -->
          </div><!--/.contingut -->

          {% include "sidebar-news.twig" %}

        </div><!--/.row -->
      </div><!--/.container-fluid -->
    </main><!--/.main .wrap-blanc -->

    {% if attribute(post,'wpcf-call_to_action_bottom_url') %}
			<!-- .seccio-vermella -->
			<div class="wrap-vermell seccio-vermella">
			  <div class="container-fluid">
			    {{ attribute(post,'wpcf-call_to_action_bottom_text') }}
			    <div class="intern">
			        <a href="{{ attribute(post,'wpcf-call_to_action_bottom_url') }}" class="bt-basic bt-basic-vermell-blanc intern-center">{{ attribute(post,'wpcf-call_to_action_bottom_button_text') }}</a>
			    </div>
			  </div>
			</div><!--/.seccio-vermella -->
		  {% endif %}

<script type="text/javascript">
  $(".selectpicker").on('change', function() {
    category = this.id;
	url = $("#"+category).val();
	window.location.href = url;
  });
</script>

{% endblock %}