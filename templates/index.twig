{% extends "base.twig" %}

{% block content %}
  <script type="text/javascript">
    var currentLocation = window.location;
  </script>
	<p>{{qux}}</p>
	<!-- .main .wrap-blanc -->
    <main class="main blog wrap-blanc">
      <!-- .main-header -->
      {% include "contingut-header.twig" %}
      <!--/.main-header -->

      <div class="container-fluid">
        <div class="row">
          <!-- .contingut -->
          <div class="contingut contingut-left llista-noticies col-sm-12 col-md-9">
            <!-- .contingut-header -->
            <header class="contingut-header">

              <!-- .filtres -->
              <form class="searchform" method="get" id="cerca_noticies" role="search" action="{{ search_params.current_url }}">
              <div class="filtres row">
                <div class="col-sm-10">
                  <div class="input-group">
                    <input type="text" class="form-control" value="{% if cerca %}{{cerca}}{% endif %}" placeholder="Escriviu aquÃ­ la vostra cerca" id="s" name="s" />
                    <input type="hidden" value="post" name="post_type" />
                    <input type="hidden" value="1" name="sentence" />
                    <span class="input-group-addon"><button type="submit" class="btn lupa"><i class="fa fa-search"></i></button></span>
                  </div>

                  <div class="row">
                    <div class="col-sm-10">
                      <div class="row">
                        <!-- dropdown sitemes operatius -->
                        <div class="col-sm-6">
                          <select class="form-control selectpicker" id="temes">
                            <option value="/noticies">Tots els temes</option>
                            {% for category in categories.temes %}
                              <option value="{{ category.link }}{{ search_params.current_url_params }}" {% if cat_link == category.link %}selected{% endif %}>{{ category.name }}</option>
                            {% endfor %}
                          </select>
                        </div><!--/dropdown sitemes operatius -->

                        <!-- dropdown categories -->
                        <div class="col-sm-6">
                          <select class="form-control selectpicker" id="tipus">
                            <option value="/noticies">Tots els tipus</option>
                            {% for category in categories.tipus %}
                            	<option value="{{ category.link }}{{ search_params.current_url_params }}" {% if cat_link == category.link %}selected{% endif %}>{{ category.name }}</option>
                            {% endfor %}
                          </select>
                        </div><!--/dropdown categories -->
                      </div>
                    </div>
                  </div>

                </div>
              </div><!--/.filtres -->
              </form>
            </header><!--/.contingut-header -->

            {% if posts %}
            {% for post in posts %}
      				{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
      			{% endfor %}
            {% endif %}
            <!-- .pagination -->
            {% include "pagination.twig" %}
            <!--/.pagination -->
          </div><!--/.contingut -->

          {% include "sidebar.twig" %}

        </div><!--/.row -->
      </div><!--/.container-fluid -->
    </main><!--/.main .wrap-blanc -->

    <!-- .seccio-vermella -->
    {% include "call-to-action-bottom.twig" %}
    <!--/.seccio-vermella -->

<script type="text/javascript">
  $(".selectpicker").on('change', function() {
    category = this.id;
	url = $("#"+category).val();
	window.location.href = url;
  });
</script>

{% endblock %}