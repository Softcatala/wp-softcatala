{% extends "base.twig" %}

{% block content %}
    <!-- .main .wrap-blanc -->
    <main class="main wrap-blanc blog">
        <!-- .main-header -->
        {% include "contingut-header.twig" %}
        <!--/.main-header -->

      <div class="container-fluid">
        <div class="row">

          <!-- .contingut -->
          <div class="contingut contingut-left col-sm-9">

            <!-- .contingut-article -->
            <article class="contingut-article">

              <!-- .contingut-header -->
              <header class="contingut-header">
                <div class="row">
                    <div class="col-md-6" style="text-align: center;">
                      {% if post.thumbnail.src %}
                          <img alt="{{post.title}}" src="{{post.thumbnail.src | resize(300)}}">
                      {% endif %}
                    </div>
                    <div class="col-md-4">
                      <div class="data">
                          <div>Temporada {{ episode.episode_season }} - Episodi {{ episode.episode_number }}</div>
                          <time itemprop="dateCreated" datetime="{{post.post_date|date('Y-m-j')}}">
                              {{post.post_date|date('F \d\e Y')}}
                          </time>
                      </div>
                      {% if post.terms('tags') %}
                          <div class="bt-grup">
                              {% for term in post.terms('tags') %}
                                  <a class="bt-basic active" href="{{term.link}}">{{term.name}}</a>
                              {% endfor %}
                          </div>
                      {% endif %}
                    </div>
                </div>
                <hr class="clara">
              </header><!--/.contingut-header -->

              <!-- .contingut-section -->
              <section class="contingut-section">
                  {{ function('do_shortcode', '[audio mp3=' ~ post.enclosure.url  ~ ']') }}
                  <hr class="clara">
                  {{post.content}}
              </section><!--/.contingut-section -->

            </article><!--/.contingut-article -->

            <!-- .comentaris -->
              {% include "comentaris.twig" %}
            <!-- .comentaris -->
            <hr>


          </div><!--/.contingut -->

          {% include "sidebar.twig" %}
          </div><!--/.row -->
  </div><!--/.container-fluid -->
</main><!--/.main .wrap-blanc -->


    <!-- .seccio-vermella -->
    {% include "call-to-action-bottom.twig" %}
    <!--/.seccio-vermella -->
{% endblock %}
