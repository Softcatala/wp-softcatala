{% extends "base.twig" %}

{% block content %}
    <!-- .main .wrap-blanc -->
    <main class="main blog wrap-blanc">
        <!-- .main-header -->
        {% include "contingut-header.twig" %}
        <!--/.main-header -->

        <div class="container-fluid">
            <div class="contingut row">
                <div class="podcast col-sm-6">
                    <div>
                        {{ term.description }}
                    </div>
                </div>

                <section class="episodes">
                {% for episode in posts %}
                    <article class="episode col-sm-6">
                        <div class="thumbnail thumbnail-gris-img">
                            <a href="{{ episode.link }}">
                                <img src="{{ episode.thumbnail.src | resize(180)}}" />
                                <div class="caption" style="padding-left: 17px">
                                    <h3 style="width: 100%;text-align: center">
                                        {{ episode.episode_season }}x{{ episode.episode_number }}: {{ episode.title }}
                                    </h3>
                                    <div>{{ episode.post_excerpt | wpautop }}</div>
                                    <div style="text-align: center;margin-top: 40px;position: relative;">
                                        <span
                                            class="bt-aneu"
                                            style="display: inline-block;margin-left: auto;margin-right: auto;position: relative;">
                                            més informació<i class="fa fa-chevron-right"></i>
                                        </span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </article>
                {% endfor %}
                </section>

            </div><!--/.contingut -->
        </div><!--/.container-fluid -->
    </main><!--/.main .wrap-blanc -->

    <!-- .seccio-vermella -->
    {% include "form-novetats.twig" %}
    {% include "call-to-action-bottom.twig" %}
    <!--/.seccio-vermella -->

{% endblock %}
