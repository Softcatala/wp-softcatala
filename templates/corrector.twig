{% extends "base.twig" %}

{% block content %}
    <!-- .main .wrap-blanc -->
    <main class="main wrap-blanc cd-main-content">
      <!-- .main-header -->
      <header class="main-header">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xxs-12 col-xs-8 col-sm-9">
              <h1>Corrector</h1>
              {% include "share_links.twig" %}
            </div>
            {% if attribute(post,'wpcf-call_to_action_top_url') %}
            <div class="col-xxs-12 col-xs-4 col-sm-3">
              <a href="{{ attribute(post,'wpcf-call_to_action_top_url') }}" class="bt-basic bt-basic-vermell">{{ attribute(post,'wpcf-call_to_action_top_text') }}</a>
            </div>
			{% endif %}
          </div>
        </div>
      </header><!--/.main-header -->
      
      

      <div class="container-fluid">
        
        <div class="row">

          <!-- .contingut -->
          <div class="contingut contingut-left col-sm-12 col-md-9">

            <!-- .formulari-eines -->
            <section class="formulari-eines contingut-section">

              

              <!-- .formulari -->
              <form class="formulari form-horizontal"  name="checkform" action="http://community.languagetool.org" method="post">
                
					{% include "corrector-wrapper.twig" %}  
				  
              </form><!--/.formulari  -->

              <p class="fons-gris"><strong>IMPORTANT!</strong> Exemple de Nota al peu de p√†gina. Lorem ipsum dolor set morbi bibendum arcu eget justo dictum vel ullamcorper quam accumsan Lorem ipsum dolor set <a href="#">morbi bibendum arcu</a> eget justo dictum  vel ullamcorper quam accumsan post et ridere</p>

            </section><!--/.formulari-eines -->


            <!-- .contingut-section  -->
            <section class="contingut-section">
                {{post.content}}
            </section><!--/.contingut-section  -->
          </div><!--/.contingut -->

          {% include "sidebar-traductor.twig" %}

        </div><!--/.row -->
      </div><!--/.container-fluid -->
    </main><!--/.main .wrap-blanc -->

    {% if attribute(post,'wpcf-call_to_action_bottom_url') %}
    <!-- .seccio-vermella -->
    <div class="wrap-vermell seccio-vermella">
      <div class="container-fluid">
        {{ attribute(post,'wpcf-call_to_action_bottom_text') }}
        <div class="intern">
            <a href="{{ attribute(post,'wpcf-call_to_action_bottom_url') }}" class="bt-basic bt-basic-vermell-blanc intern-center">{{ attribute(post,'wpcf-call_to_action_bottom_button_text') }}</a>
        </div>
      </div>
    </div><!--/.seccio-vermella -->
    {% endif %}
    
    {% include "report-traductor.twig" %}

    {% include "static/traductor-logos.twig" %}
    
    {% include "template-avis.twig" %}
{% endblock %}