{% extends "base.twig" %}

{% block content %}
    <script type="text/javascript">
      var languagetool_rpc_url = '{{ api_languagetool }}';
      var corrector_send_sessionid = '{{ corrector_send_sessionid }}';
    </script>
    <!-- .main .wrap-blanc -->
    <main class="main wrap-blanc cd-main-content">
      <!-- .main-header -->
        {% include "contingut-header.twig" %}
      <!--/.main-header -->

      <div class="container-fluid">

        <div class="row">

          <!-- .contingut -->
          <div class="contingut contingut-left col-sm-12 col-md-8">
            <div class="caixa-gris" style="text-align:center; font-size: 13px;">
              <p>NOVA VERSIÓ DEL CORRECTOR</p>
              <div>
                Estem desenvolupant una nova versió del corrector. 
		Es tracta d'un editor de text enriquit, en el qual podeu donar format al document, usant els formats habituals (capçaleres, negretes, cursives, alineació, etc.).
                <br /><br />
                Es troba en <strong><em>BETA</em></strong>, i podeu accedir a <a href="/corrector-beta/" style="color: #c43434;display:inline;margin:auto">través d'aquest enllaç</a>.
                <br /><br />
                Proveu-lo, i digueu-nos que us sembla!
              </div>
            </div>
            <!-- .formulari-eines -->
            <section class="formulari-eines contingut-section">

              <!-- .formulari -->
              <form class="formulari form-horizontal"  name="checkform" action="#" method="post">
					{% include "corrector-wrapper.twig" %}
              </form><!--/.formulari  -->
            </section><!--/.formulari-eines -->

            {% if post.content %}
            <!-- .contingut-section  -->
            <section class="contingut-section">
                {{post.content}}
            </section>
            <!--/.contingut-section  -->
            {% endif %}
          </div><!--/.contingut -->

          {% include "sidebar_recursos.twig" %}

        </div><!--/.row -->
      </div><!--/.container-fluid -->
    </main><!--/.main .wrap-blanc -->

    <!-- .seccio-vermella -->
    {% include "call-to-action-bottom.twig" %}
    <!--/.seccio-vermella -->

    {% include "contact_form.twig" %}

    {% include "static/corrector-logos.twig" %}

    {% include "template-avis.twig" %}
{% endblock %}
