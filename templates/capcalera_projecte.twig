<header class="main-header" id="principi">
    <div class="container-fluid">
        <div class="gris-main-header">
            <div class="row">
                <div class="img-main-header-gris col-xxs-12 col-xs-3 col-sm-3 col-md-2">
                    {% if post.logotip %}
                        <img class="img-responsive" src="{{ post.logotip }}" class="imatge-logotip-programa" alt="logo {{ post.title }}">
                    {% else %}
                        <i style="font-size: 152px" class="fa fa-cogs"></i>
                    {% endif %}
                </div>
                <div class="cont-main-header-gris col-xxs-12 col-xs-9 col-sm-9 col-md-10">
                    <h1>{{ post.title }}</h1>
                    <h2>{{ post.subtitle_projecte }}</h2>
                    <ul>
                        <li>{{ post.autor_projecte }}</li>
                        <li>{% if post.terms('llicencia') %}
                                {% for term in post.terms('llicencia') %}
                                    {{term.name}}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            {% endif %}</li>
                        <li><a href="{{ post.lloc_web_projecte }}">{{ post.lloc_web_projecte }}</a></li>
                    </ul>
                    <a href="/col·laboreu/projecte/{{ post.slug }}" title="Col·laboreu amb el projecte {{ post.title }} de Softcatalà" class="bt-download-invers bt-collaboreu"><i class="fa fa-user-plus"></i><span>Col&middot;laboreu amb el projecte</span></a>
                    <footer class="footer-main-header-gris">
                        {% include "share_links.twig" %}
                    </footer>
                </div>
            </div>
        </div>
        <div class="menu-main-header-gris">
            <!-- .boto-menu-lateral gris - xs -->
            <div class="visible-xs-block boto-menu-lateral">
                <a class="bt-menu-lateral" href="#menu-lateral" data-toggle="collapse" aria-expanded="false" aria-controls="#menu-lateral">
                    <i class="fa fa-bars"></i>
                    <p>Taula de continguts</p>
                    <i class="fa fa-chevron-down"></i>
                </a>
            </div><!--/.boto-menu-lateral gris - xs -->
            <!-- #menu-lateral -->
            <ul class="nav collapse navbar-collapse" id="menu-lateral">
                <li><a href="{{ post.link }}">Descripció</a></li>
                {% if related_pages %}
                    {% for page in related_pages %}
                        <li><a href="{{page.link}}" title="{{ page.title }}">{{page.title}}</a></li>
                    {% endfor %}
                {% endif %}
            </ul><!--/#menu-lateral -->

        </div>
    </div>
</header>