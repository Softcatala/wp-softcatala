<article class="lemma">
    <header>{{ lemma.originalWord | prepareLemmaHeading}}</header>
    
        {% for subLemma in lemma.subLemmaList  %}
                {{ subLemma.originalWord | prepareSubLemma}}
                <ol>
                  {% set fullGTag = subLemma.originalWord | fullGrammarTag %}
                 
                  {% for translationsSet in subLemma.translationsSets %}
                    <li>
                        {% for translatedWord in translationsSet.translatedWords %}
                            {{ loop.index > 1 ? ' | ' : '' }} {{ translatedWord | prepareWord(fullGTag) }}
                        {% endfor %}
                        {% for example in translationsSet.examples %}
                            <br/>&nbsp;&nbsp;<span class="engcat-src_sent">{example.sourceSentence}</span><span class="engcat-tgt_sent">&nbsp;&mdash;&nbsp;{example.targetSentence}</span>
                        {% endfor %}
                    </li>
                {% endfor %}
                </ol>
        {% endfor %}  
</article>




