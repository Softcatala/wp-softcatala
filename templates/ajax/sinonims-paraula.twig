{% if result %}
    <h3 style="text-transform: none">{{ result.lemma }}
        {% include 'ajax/sinonims-paraula.twig' with {'word': result.feminineLemma } only %}
    </h3>
    <div class="col-sm-8 col-sm-offset-1 multilingue_list">
        {% for entry in result.synonymEntries %}
            <p>
                {% include 'ajax/sinonims-paraula-entry.twig' with {'entry': entry, 'index': loop.index } only %}
            </p>
        {% endfor %}
        {% if result.antonymEntries %}
            <div>&mdash;ANTÃ’NIMS&mdash;<br/>
            {% for entry in result.antonymEntries %}
                {% include 'ajax/sinonims-paraula-entry.twig' with {'entry': entry, 'index': loop.index } only %}
            {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="clearfix"></div>
    {% if not last %}
        <hr class="clara">
    {% endif %}
{% endif %}
{% if message %}
    {{ message }}
{% endif %}
