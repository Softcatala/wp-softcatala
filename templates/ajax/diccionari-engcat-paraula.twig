{% if results.lemmas %}
        <div class="panel-heading">
            <h4 class="panel-title">
               
                {% if results.llengua == 'eng' %}
                        <span class="titol_llengua">anglès → català</span>
                {% else %}  
                        <span class="titol_llengua">català → anglès</span>
                {% endif %}

                <span class="engcat-num-results">
                    ({{ results.lemmas|length }} resultat{{ results.lemmas|length == 1 ? '' : 's' }})
                </span>
                {% if results.other_direction_url %}
                <span class="engcat-num-results">
                    <a href="{{ results.other_direction_url }}">{{ results.other_direction_label }}</a>
                    ({{ results.other_direction_count }} resultat{{ results.other_direction_count == 1 ? '' : 's' }})
                </span>
                {% endif %}
            </h4>
        </div>
        <div class="panel-body">
                {% for lemma in results.lemmas %}
                    {% include 'ajax/diccionari-engcat-paraula-entry.twig' %}
                {% endfor %}
                
                {% include 'ajax/diccionari-engcat-corpus.twig'  %}
                
        </div>
{% endif %}



