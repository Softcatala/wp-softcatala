                                                                {%- endif -%}
                                                                {%- if loop.last == false  %}, {% endif -%}
                                                        {% endfor -%}
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                </table>

                                                    
                                            </div>
                            </div>   
                
            {% endfor %}
    </div>
    <div id = "imperatiu" class="result-conjugador col-md-12 tab-pane">
            
            <h2>{{ response.verbinf|capitalize }}</h2>
            <h4>Imperatiu</h4>
            {% for verbs in response.result if verbs.group == 'Imperatiu'  %}
