            {% endfor %}
    </div>
    <div id = "nopersonals" class="result-conjugador col-md-12 tab-pane">
        <h2>{{ response.verbinf|capitalize }}</h2>
        <h4>Formes no personals</h4>
             <div class="col-md-12">
                <div class="panel panel-primary">                           
                    <div class="panel-heading">Formes no personals</div>
                                     
                    
                    
                    <table class="table">
                    {% for verbs in response.result if verbs.group == 'Formes no personals'  %}
                        <tr>
                            <th>{{ verbs.form }} </th>
                            <td>
                            {% set i = 1 %}
                            {% for clau, subjecte in response.temps if  attribute(verbs, clau) | length > 0 %}
                            
                                   {%- for verb in attribute(verbs, clau)  -%} 
                                            {% if i > 1 %}, {% endif %} 
                                            {{- verb.word -}}
                                            {% set i = i + 1%}
                                            {%- if attribute(response.variants, verb.variant) is defined -%}
                                                <span class="variant"> {{ attribute(response.variants, verb.variant) }}</span>
                                            {%- endif -%}   
                                                                                         
                                  {%- endfor -%}                  
                            {% endfor %}
                            </td>
                        </tr>


                    {% endfor %}
                    </table>
                </div>
            </div>
    </div>

</div>







