{% extends "base.twig" %}

{% block content %}
    <!-- .main .wrap-blanc -->
    <main class="main wrap-blanc cd-main-content">
      <!-- .main-header -->
      <header class="main-header">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xxs-12 col-xs-8 col-sm-9">
              <h1>Traductor</h1>
              {% include "share_links.twig" %}
            </div>
            <div class="col-xxs-12 col-xs-4 col-sm-3">
              <button type="button" class="bt-basic bt-basic-vermell">Call to action</button>
            </div>
          </div>
        </div>
      </header><!--/.main-header -->
    <div class="container-fluid">
        <div class="row">

          <!-- .contingut -->
          <div class="contingut contingut-left col-sm-12 col-md-9">

            <!-- .formulari-eines -->
            <section class="formulari-eines contingut-section">

              <!-- .btns-llengues -->
              <div class="btns-llengues row">
                <div class="col-xs-12">
                  <!-- .btns-llengues-origen -->
                  <div class="btns-llengues-origen btn-group" role="group">
                    <button type="button" class="btn bt select" id="origin-cat">Català</button>
                    <button type="button" class="btn bt" id="origin-spa">Castellà</button>

                    <div class="btn-group" role="group">
                      <!-- dropdown llengues -->
                      <select class="form-control selectpicker" id="origin-select">
                        <option selected="true" disabled="disabled">Una altra llengua</option>
                        <option value="oc">Occità/Aranès</option>
                        <option value="fr">Francès</option>
                        <option value="en">Anglès</option>
                        <option value="pt">Portuguès</option>
                      </select><!--/dropdown llengues -->
                    </div>
                  </div><!--/.btns-llengues-origen -->

                  <div class="btn-right">
                    <button type="button" class="btn direccio"><i class="fa fa-long-arrow-left"></i><i class="fa fa-long-arrow-right"></i></button>

                    <!-- .btns-llengues-desti  -->
                    <div class="btns-llengues-desti btn-group" role="group">
                      <button type="button" class="btn bt select" id="target-spa">Castellà</button>
                      <button type="button" class="btn bt" id="target-cat">Català</button>
                      <div class="btn-group" role="group">
                        <!-- dropdown llengues -->
                        <select class="form-control selectpicker" id="target-select">
                          <option selected="true" disabled="disabled">Una altra llengua</option>
                          <option value="oc">Occità</option>
                          <option value="fr">Francès</option>
                          <option value="en">Anglès</option>
                          <option value="pt">Portuguès</option>
                        </select><!--/dropdown llengues -->
                      </div>
                    </div><!-- .btns-llengues-desti -->

                    <button id="translate" type="button" class="bt-basic bt-basic-vermell">Tradueix</button>
                  </div>
                </div>
              </div><!--/.btns-llengues -->

              <!-- .formulari -->
              <form class="formulari form-horizontal">
                <div class="traductor-textarea form-group">
                  <div class="textarea-origen col-xs-12 col-sm-6">
