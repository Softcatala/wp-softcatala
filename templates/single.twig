{% extends "base.twig" %}

{% block content %}
	<!-- .main .wrap-blanc -->
    <main class="main wrap-blanc blog">
      <!-- .main-header -->
      <header class="main-header">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xxs-12 col-xs-8 col-sm-9">
              <h1>{{post.title}}</h1>
              {% include "share_links.twig" %}
            </div>
			{% if attribute(post,'wpcf-call_to_action_top_url') %}
            <div class="col-xxs-12 col-xs-4 col-sm-3">
              <a href="{{ attribute(post,'wpcf-call_to_action_top_url') }}" class="bt-basic bt-basic-vermell">{{ attribute(post,'wpcf-call_to_action_top_text') }}</a>
            </div>
			{% endif %}
          </div>
        </div>
      </header><!--/.main-header -->

      <div class="container-fluid">
        <div class="row">

          <!-- .contingut -->
          <div class="contingut contingut-left col-sm-9">

            <!-- .contingut-article -->
            <article class="contingut-article">

              <!-- .contingut-header -->
              <header class="contingut-header">
              	{% if post.post_excerpt %}
                	<p>{{ post.post_excerpt }}</p>
            	{% endif %}
            	{% if post.thumbnail.src %}
            		<img alt="{{post.title}}" src="{{post.thumbnail.src}}">
            		{% if post.thumbnail.caption %}
                	<em class="peu-foto">{{post.thumbnail.caption}}</em>
                	{% endif %}
                {% endif %}
                {% if post.terms('tags') %}
                    <div class="bt-grup">
                	{% for term in post.terms('tags') %}
	                  <a class="bt-basic active" href="{{term.link}}">{{term.name}}</a>
	            	{% endfor %}
                    </div>
	            {% endif %}
                <div class="data">
                  <time itemprop="dateCreated" datetime="{{post.post_date|date('Y-n-j')}}">{{post.post_date|date('j M Y')}}</time><span>|</span>Publicat per <a href="{{post.author.path}}">{{ post.author.name }}</a>
                </div>
                <hr class="clara">
              </header><!--/.contingut-header -->

              <!-- .contingut-section -->
              <section class="contingut-section">{{post.content}}</section><!--/.contingut-section -->

            </article><!--/.contingut-article -->

            <!-- .comentaris -->
            <section class="comentaris">
              <hr>
              <div class="row comentari-header">
                <div class="col-xxs-12 col-xs-8 col-sm-8">
                  <h2>Comentaris</h2>
                </div>
                <div class="col-xxs-12 col-xs-4 col-sm-4">
                  <button type="button" class="bt-basic respon_link" id="0">Escriviu un comentari</button>
                </div>
              </div>
				<article class="article-comentari">
				<div id="comment-0"></div>
				</article>
      			{% for cmt in post.get_comments() %}
				{% if loop.index == 20 %}<div id="mescomentaris" class="collapse">{% endif %}
                <article class="article-comentari">
      			{% include "comment.twig" with {comment:cmt} %}
                {% if cmt.children %}
                  {% for cmtch1 in cmt.children %}
                    <article class="article-comentari">
                    {% include "comment.twig" with {comment:cmtch1, is_child:1} %}
                    </article>
                  {% endfor %}
                {% endif %}
                </article>
				{% if loop.index > 20 %}{% if loop.last %}</div>{% endif %}{% endif %}
				{% if loop.index > 20 %}
				  {% if loop.last %}
				  <div class="row">
					<div class="intern">
					  <button data-toggle="collapse" class="bt-basic bt-mes intern-center" type="button" href="#mescomentaris">m√©s<i class="fa fa-angle-down"></i></button>
					</div>
				  </div>
				  {% endif %}
				{% endif %}
      			{% endfor %}
            </section>
			
			<div id="comment_form_flexible" style="display: none;">
			  {% include "comment_form.twig" %}
			</div>
			<script>
			  $( ".respon_link" ).click(function() {
				$('#hide_clean_form').click();
				$("#comment_form_flexible").detach().appendTo('#comment-'+this.id);
				$("#comment_parent").val(this.id);
				if (this.id == '0') {
				  $( "#comment_flexible_form" ).css( "margin-left", "0" );
				} else {
				  $( "#comment_flexible_form" ).css( "margin-left", "68px" );
				}
				jQuery("#comment_form_flexible").fadeIn();
			  });
			  
			  $( "#hide_clean_form" ).click(function() {
				$("#comment_form_flexible").hide();
				$("#author").val('Nom');
				$("#comment").val('Comentari');
				$("#email").val('E-mail');
			  });
			</script>
            
            <hr>


          </div><!--/.contingut -->

          {% include "sidebar-news-single.twig" %}
		  </div><!--/.row -->
  </div><!--/.container-fluid -->
</main><!--/.main .wrap-blanc -->

          
		  {% if attribute(post,'wpcf-call_to_action_bottom_url') %}
			<!-- .seccio-vermella -->
			<div class="wrap-vermell seccio-vermella">
			  <div class="container-fluid">
			    {{ attribute(post,'wpcf-call_to_action_bottom_text') }}
			    <div class="intern">
			        <a href="{{ attribute(post,'wpcf-call_to_action_bottom_url') }}" class="bt-basic bt-basic-vermell-blanc intern-center">{{ attribute(post,'wpcf-call_to_action_bottom_button_text') }}</a>
			    </div>
			  </div>
			</div><!--/.seccio-vermella -->
		  {% endif %}
{% endblock %}
