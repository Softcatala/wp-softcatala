{% extends "base.twig" %}

{% block content %}
    <!-- .main .wrap-blanc -->
    <main class="main wrap-blanc programa cd-main-content">
        <!-- .main-header -->
        <header class="main-header" id="principi">
            <div class="container-fluid">
                <div class="gris-main-header">
                    <div class="row cap-aparell">
                        <div class="img-main-header-gris col-xxs-12 col-xs-3 col-sm-5 col-md-4">
                            {% if post.thumbnail.src %}
                                <img class="img-responsive" src="{{ post.thumbnail.src }}" class="imatge-logotip-programa" alt="logo {{ post.title }}">
                            {% else %}
                                <i style="font-size: 152px" class="fa fa-cogs"></i>
                            {% endif %}
                        </div>
                        <div class="cont-main-header-gris col-xxs-12 col-xs-9 col-sm-7 col-md-8">
                            <h1>{{ post.title }}</h1>
                            <!-- .panel-body -->
                            <div class="panel-body">
                                <!-- detalls -->
                                <div class="row">
                                    <div class="col-xs-12 col-sm-6">
                                        <div class="row">
                                            <div class="col-xs-6">
                                                <ul class="aparells_detail">
                                                    <li><strong>Nom</strong></li>
                                                    <li>{{ post.title }}</li>
                                                    <li><strong>Sistema operatiu</strong></li>
                                                    <li>{% if post.terms('so_aparell') %}
                                                            {% for term in post.terms('so_aparell') %}
                                                                {{term.name}}
                                                            {% endfor %}
                                                        {% endif %}</li>
                                                    <li><strong>Està traduït al català?</strong></li>
                                                    <li>{% if post.conf_cat %}Sí{% else %}No{% endif %}</li>
                                                </ul>
                                            </div>
                                            <div class="col-xs-6">
                                                <ul class="aparells_detail">
                                                    <li><strong>Tipus de dispositiu</strong></li>
                                                    <li>{% if post.terms('tipus_aparell') %}
                                                                {% for term in post.terms('tipus_aparell') %}
                                                                    {{term.name}}
                                                                {% endfor %}
                                                        {% endif %}</li>
                                                    {% if post.versio %}
                                                    <li><strong>Versió del SO</strong></li>
                                                    <li>{{ post.versio }}</li>
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-6">
                                        <div class="row">
                                            <div class="col-xs-6">
                                                <ul class="aparells_detail">
                                                    <li><strong>Fabricant</strong></li>
                                                    <li>{{ post.fabricant }}</li>
                                                    <li><strong>Inclou teclat predictiu en català?</strong></li>
                                                    <li>{% if post.correccio_cat == '1' %}Sí
                                                        {% else %}
                                                            {% if post.correccio_cat == '3' %}
                                                                Desconegut
                                                            {% else %}
                                                                No
                                                            {% endif %}
                                                        {% endif %}</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--/detalls -->
                            </div><!--/.panel-body -->
                            <footer class="footer-main-header-gris">
                                {% include "share_links.twig" %}
                            </footer>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!--/.main-header -->

        <div class="container-fluid">
            <div class="row">
                <!-- .contingut -->
                <div class="contingut contingut-left col-sm-9">                <!-- .comentaris -->
    			    <!-- .comentaris -->
                    {% include "comentaris.twig" %}
                    <!-- /.comentaris -->
                    <hr>
                </div><!--/.contingut -->
                {% include "sidebar.twig" %}
            </div><!--/.row -->
      </div><!--/.container-fluid -->
    </main><!--/.main .wrap-blanc -->

        <!-- .seccio-vermella -->
        {% include "call-to-action-bottom.twig" %}
        <!--/.seccio-vermella -->

        {% include "contact_form.twig" %}

        <!-- .seccio-blanca -->
        {% include "credits.twig" %}
        <!--/.seccio-blanca -->
{% endblock %}
