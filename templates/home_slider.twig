<!-- .carousel -->
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    {% for slide in slides %}
    <li data-target="#carousel-example-generic" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
    {% endfor %}
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    {% for slide in slides %}
    <div class="item {% if loop.first %}active{% endif %}">
      <a href="{{ attribute(slide,'wpcf-slide_link') }}" title="{{ slide.title }}">
      <img src="{{ attribute(slide,'wpcf-slide_image') }}" alt="{{ slide.title }}">
      <div class="carousel-caption">
        <h1>{{ slide.title }}</h1>
        <h2>{{ slide.post_excerpt }}</h2>
        {% if attribute(slide,'wpcf-button_title') %}
        <button type="button" class="bt-basic bt-blanc">{{ attribute(slide,'wpcf-button_title') }}</button>
        {% endif %}
      </div>
      {% if attribute(slide,'wpcf-image_credits') %}
      <div class="peu-foto">
        <em>{{ attribute(slide,'wpcf-image_credits') }}</em>
      </div>
      {% endif %}
      </a>
    </div>
    
    {% endfor %}
  </div><!--/ Wrapper for slides -->
</div><!--/.carousel -->